<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="8dp"
    android:layout_margin="@dimen/size_10"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/white"
    android:id="@+id/cvItem">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvItemTitle"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/size_20"
            android:layout_marginStart="@dimen/size_10"
            android:layout_marginBottom="@dimen/size_20"
            android:text="@string/item_title"
            android:textColor="@color/dark_gray"
            android:textSize="@dimen/text_15"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@id/ivItemImage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvItemDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/item_desc"
            android:textStyle="normal"
            android:textColor="@color/dark_gray"
            android:textSize="@dimen/text_12"
            android:layout_marginTop="@dimen/size_20"
            android:layout_marginStart="@dimen/size_10"
            android:layout_marginBottom="@dimen/size_20"
            app:layout_constraintEnd_toStartOf="@id/ivItemImage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvItemTitle" />

        <TextView
            android:id="@+id/tvItemValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/item_price"
            android:textStyle="normal"
            android:textColor="@color/dark_gray"
            android:textSize="@dimen/text_13"
            android:layout_marginTop="@dimen/size_20"
            android:layout_marginStart="@dimen/size_10"
            android:layout_marginBottom="@dimen/size_20"
            app:layout_constraintEnd_toStartOf="@id/ivItemImage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvItemDescription"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <ImageView
            android:id="@+id/ivItemImage"
            android:layout_width="@dimen/size_90"
            android:layout_height="@dimen/size_90"
            android:src="@drawable/qrcode_image"
            android:layout_marginEnd="@dimen/size_30"
            app:layout_constraintBottom_toTopOf="@id/ivItemFavorite"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            android:id="@+id/ivItemFavorite"
            android:layout_width="@dimen/size_21"
            android:layout_height="@dimen/size_21"
            android:src="@drawable/notfav_icon"
            android:contentDescription="@string/fav_ic"
            android:layout_marginEnd="@dimen/size_10"
            android:layout_marginBottom="@dimen/size_5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>